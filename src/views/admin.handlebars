<main>
  <h1>Capricorn Admin</h1>
  
  <section>
    <h2>All Capabilities</h2>
    
    {{#if capabilities.length}}
      <div class="capabilities">
        {{#each capabilities}}
          <div class="capability-card type-{{this.type}}">
            <h3>{{this.type}}: {{this.label}}</h3>
            <div class="capability-details">
              <p><strong>ID:</strong> {{this.id}}</p>
              <p><strong>Type:</strong> {{this.type}}</p>
              <p><strong>Created:</strong> {{this.createdAt}}</p>
              {{#if this.ttl}}
                <p><strong>TTL:</strong> {{this.ttl}} seconds</p>
                {{#if this.ttlStatus}}
                  <p class="ttl-status {{#if this.ttlStatus.expired}}expired{{else}}valid{{/if}}">
                    <strong>Status:</strong> {{this.ttlStatus.message}}
                  </p>
                {{/if}}
              {{/if}}
              {{#if this.parentCapId}}
                <p><strong>Parent:</strong> {{this.parentCapId}}</p>
              {{/if}}
            </div>
            <div class="capability-actions">
              <a href="{{this.url}}" target="_blank" class="button">Open Capability URL</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No capabilities have been created yet.</p>
    {{/if}}
  </section>
  
  <style>
    .capabilities {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    
    .capability-card {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 16px;
      background-color: #f9f9f9;
    }
    
    .capability-details {
      margin: 8px 0;
    }
    
    .capability-actions {
      margin-top: 16px;
    }
    
    .type-admin {
      border-color: #cc0000;
      border-width: 2px;
    }
    
    .type-writer {
      border-color: #008800;
      border-width: 2px;
    }
    
    .type-router {
      border-color: #0000cc;
      border-width: 2px;
    }
    
    .ttl-status.expired {
      color: #cc0000;
      font-weight: bold;
    }
    
    .ttl-status.valid {
      color: #008800;
    }
    
    .button {
      display: inline-block;
      padding: 8px 16px;
      background-color: #0066cc;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    
    .button:hover {
      background-color: #0055aa;
    }
  </style>
</main>