<main>
  <h1>Writer Capability: {{capability.label}}</h1>
  
  <section class="capability-info">
    <div class="capability-card type-writer">
      <h3>Writer: {{capability.label}}</h3>
      <div class="capability-details">
        <p><strong>ID:</strong> {{capability.id}}</p>
        <p><strong>Type:</strong> {{capability.type}}</p>
        <p><strong>Created:</strong> {{capability.createdAt}}</p>
        {{#if capability.ttl}}
          <p><strong>TTL:</strong> {{capability.ttl}} seconds</p>
          {{#if capability.ttlStatus}}
            <p class="ttl-status {{#if capability.ttlStatus.expired}}expired{{else}}valid{{/if}}">
              <strong>Status:</strong> {{capability.ttlStatus.message}}
            </p>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </section>

  <section class="create-router">
    <h2>Create New Router Capability</h2>
    <p>Use this form to create a new router capability that will transform incoming requests.</p>
    
    {{> router-form }}
  </section>
  
  <section class="existing-routes">
    <h2>Existing Router Capabilities</h2>
    
    {{#if routerCaps.length}}
      <div class="capabilities">
        {{#each routerCaps}}
          <div class="capability-card type-router">
            <h3>Router: {{this.label}}</h3>
            <div class="capability-details">
              <p><strong>ID:</strong> {{this.id}}</p>
              <p><strong>Created:</strong> {{this.createdAt}}</p>
              {{#if this.ttl}}
                <p><strong>TTL:</strong> {{this.ttl}} seconds</p>
                {{#if this.ttlStatus}}
                  <p class="ttl-status {{#if this.ttlStatus.expired}}expired{{else}}valid{{/if}}">
                    <strong>Status:</strong> {{this.ttlStatus.message}}
                  </p>
                {{/if}}
              {{/if}}
            </div>
            <div class="capability-actions">
              <a href="{{this.url}}" target="_blank" class="button">Open Capability URL</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No router capabilities have been created with this writer yet.</p>
    {{/if}}
  </section>
  
  <style>
    .capability-info {
      margin-bottom: 40px;
    }
    
    .capability-card {
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 16px;
      background-color: #f9f9f9;
      max-width: 600px;
      margin-bottom: 20px;
    }
    
    .capability-details {
      margin: 8px 0;
    }
    
    .type-writer {
      border-color: #008800;
      border-width: 2px;
    }
    
    .type-router {
      border-color: #0000cc;
      border-width: 2px;
    }
    
    .ttl-status.expired {
      color: #cc0000;
      font-weight: bold;
    }
    
    .ttl-status.valid {
      color: #008800;
    }
    
    .button {
      display: inline-block;
      padding: 8px 16px;
      background-color: #0066cc;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    
    .button:hover {
      background-color: #0055aa;
    }
    
    .capabilities {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    
    section {
      margin-bottom: 40px;
    }
    
    h2 {
      margin-top: 0;
      margin-bottom: 16px;
    }
  </style>
</main>