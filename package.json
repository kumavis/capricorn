{
  "name": "capricorn",
  "type": "module",
  "scripts": {
    "start": "node --import=tsimp/import src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'clear && npm start'",
    "test": "ava",
    "test:dev": "ava --watch",
    "migrate": "node --import=tsimp/import src/db/migrate.ts"
  },
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.42",
    "@sequelize/postgres": "^7.0.0-alpha.44",
    "@types/express": "^5.0.0",
    "@types/pg": "^8.10.9",
    "dotenv": "^16.3.1",
    "express": "^5.0.1",
    "pg": "^8.11.3",
    "ses": "^1.11.0",
    "tsimp": "^2.0.12",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@endo/ses-ava": "^1.1.0",
    "@types/supertest": "^6.0.2",
    "ava": "^5.3.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ]
  }
}
